# Top-most EditorConfig file
root = true

# Global settings - applies to all files in the project
[*]
# Set indentation to 4 spaces
indent_style = space
indent_size = 4
# Unix-style line endings
end_of_line = lf
# Ensure files end with a newline
insert_final_newline = true
# Trim any trailing whitespace
trim_trailing_whitespace = true
# Set charset to UTF-8
charset = utf-8

# C# specific settings
[*.cs]
# C# files should use 4 spaces for indentation
indent_size = 4
# Use a single space for tabs
tab_width = 4
# Place `using` directives inside the namespace
dotnet_style_predefined_type_for_locals_parameters_members = true:suggestion
dotnet_style_require_accessibility_modifiers = always:suggestion
# Require braces for control blocks
csharp_prefer_braces = true:suggestion
# Use 'var' when the type is apparent from the right-hand side
csharp_style_var_when_type_is_apparent = true:suggestion
# Avoid 'var' when the type is not apparent
csharp_style_var_elsewhere = false:suggestion
# Prefer `is` pattern matching over cast and check for null
dotnet_style_pattern_matching_over_as_with_null_check = true:suggestion
dotnet_style_pattern_matching_over_is_with_cast_check = true:suggestion
# Use `discard` for unused values
csharp_style_unused_value_assignment_preference = discard_variable:suggestion
# Use expression-bodied members
csharp_style_expression_bodied_methods = true:suggestion
csharp_style_expression_bodied_properties = true:suggestion
# Use camelCase for local variables and parameters
dotnet_naming_rule.local_variables_should_be_camel_case.severity = suggestion
dotnet_naming_rule.local_variables_should_be_camel_case.style = camel_case
dotnet_naming_rule.local_variables_should_be_camel_case.symbols = local_variables

dotnet_naming_style.camel_case.required_prefix = 
dotnet_naming_style.camel_case.capitalization = camel_case

# Use PascalCase for public members
dotnet_naming_rule.public_members_should_be_pascal_case.severity = suggestion
dotnet_naming_rule.public_members_should_be_pascal_case.style = pascal_case
dotnet_naming_rule.public_members_should_be_pascal_case.symbols = public_members

dotnet_naming_style.pascal_case.required_prefix = 
dotnet_naming_style.pascal_case.capitalization = pascal_case

dotnet_naming_symbols.public_members.applicable_accessibilities = public, protected, internal
dotnet_naming_symbols.public_members.applicable_kinds = property, method, field

# Remove unnecessary usings
dotnet_remove_unnecessary_usings = true
# Style for null checks: prefer 'x is null' instead of 'x == null'
dotnet_style_null_check_prefer_is_null = true:suggestion

# File header style
file_header_template = 
